<div class = "containerreservation m-5 mb-6">
    <div class="main-container-reservation col-lg-8">
      <h2> <%= @wig.title %> </h2>
      <div class = "photo-show-container m-5 p-5 bg-white">
        <%= cl_image_tag @wig.photo.key, class: "photo-show", crop: :fill%>
      </div>

      <p><%= @wig.location %></p>
      <hr class="my-4 bg-dark">

      <p><%= @wig.description %></p>

      <div>
        <hr class="my-4 bg-dark">
          <div class = "m-3">
            <p><strong>Renting price per day</strong></p>
            <h5><%= @wig.price_per_day.to_i %> CAD</h5>
          </div>
      </div>
      <div class = "link-div text-center mb-4 pt-0">
        <%= link_to "Previous Page", wigs_path %>
      </div>
    </div>

    <div class="formreservation">
      <%= form_with model: [@wig, @booking] do |f| %>
        <div class = "d-flex justify-content-end mb-4">
          <div class="m-1 d-flex align-item-center justify-content-center">
            <%= f.label :wig_in %>
          </div>
          <%= f.date_field :start_date %>
        </div>
        <div class = "d-flex justify-content-end mb-4">
          <div class="m-1 d-flex align-item-center justify-content-center">
            <%= f.label :wig_out %>
          </div>
          <%= f.date_field :end_date%>
        </div>
        <div class=" btnreservation d-flex justify-content-end">
          <%= f.submit "Book", class: "btnreservation" %>
        </div>
      <% end %>
    </div>
</div>


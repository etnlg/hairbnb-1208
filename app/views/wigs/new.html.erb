<div class="container my-3">
  <h1>Add a new wig</h1>
  <%= simple_form_for(@wig) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :price_per_day %>
    <%= f.input :photo, as: :file %>

    <%= f.submit "Create", class: "btn-add-new" %>

  <% end %>
</div>
